import prelude.J

main : (args : Array<String>) -> _:Void {

    x : Integer = 0
    y : Integer = 30

    test1 : Integer = ifExample1(x)
    test2 : Integer = if (x < y) 1 else 0

    J.out(test1)
    J.out(test2)
}

ifExample1 : (x: {Integer where self >= 0}) -> _:Integer {
    if (x == 0) {
        # Exemplo de statements
        x = x + 10
        y : Integer = x + 2
        x = x + y
    }
    else {
        ifExample1(x - 1)
	}
}
